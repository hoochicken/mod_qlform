namespace Joomla\Module\Qlform\Site\Helper;

use JFactory;
use Joomla\CMS\Form\Form;
use Joomla\Registry\Registry;

defined('_JEXEC') or die;

class modQlformSomethingCompletelyDifferent
{
    public array $data;
    public Registry $params;
    public \stdClass $module;
    public Form $form;
    public $files;

    /**
     * constructor
     */
    public function __construct($data, $params, $module, $form)
    {
        $this->data = $data;
        $this->params = $params;
        $this->module = $module;
        $this->form = $form;
        $formControl = $this->params->get('formControl', 'jform');
        $this->files = JFactory::getApplication()->input->files->get($formControl);
    }

    /**
     * method to do completely different,
     * add any methods you need
     * @return bool
     */
    public function doSomethingCompletelyDifferent()
    {
        //echo "<pre>";print_r($this->data);print_r($this->params);print_r($this->module);print_r($this->form);echo "</pre>";die;
        //notice:
        //arrays of multiple select fields have been jsonified via json_encode; " might have been replaced by '.
        //So use json_decode(preg_replace("/'/",'"',$dataOfField)); to get your array back
        //Greetings
        //Mareike
        if (1 == 1) return true;
        else return false;
    }
}